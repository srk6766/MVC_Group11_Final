@{
    Layout = null; // Or your layout here
    var backgroundUrl = Url.Content("~/img/background.png");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Explore India | Destinations</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="@Url.Content("~/css/styles.css")">
    <title>Explore India!</title>
    <style>
        body {
            background-image: url('@backgroundUrl');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
        /* Add other styles as needed */
    </style>
</head>
<body id="destinations-page">
    <header class="bg-primary-transparent text-white py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <h1 class="mb-0">Explore India</h1>
                </div>
                <div class="col-md-8 text-right">
                    <button class="btn btn-light" onclick="window.location.href='@Url.Action("Index", "Home")'">Home</button>
                    <button class="btn btn-primary mr-2" onclick="window.location.href='@Url.Action("Destinations", "Home")'">Destinations</button>
                    <button class="btn btn-light" onclick="window.location.href='@Url.Action("Reviews", "Home")'">Reviews</button>
                    <button class="btn btn-light" onclick="window.location.href='@Url.Action("About", "Home")'">About Us</button>
                </div>
            </div>
        </div>
    </header>

    <main>
        <section id="destinations">
            <div class="jumbotron">
                <p class="lead text-center">Explore famous places across India. Select a state from the dropdown menu below:</p>
                <div class="input-group mb-3">
                    <select class="form-control" id="stateSelect">
                        <option value="" selected disabled>Select a state</option>
                        <!-- JavaScript will populate the state options here -->
                    </select>
                    <div class="input-group-append">
                        <button id="searchButton" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </div>

            <div id="stateInfo" style="display: none;">
                <h2 id="pageTitle" class="text-center"></h2>
                <div id="stateImageContainer" class="text-center mb-4">
                    <img id="stateImage" src="" alt="State Image" class="img-fluid rounded">
                </div>
                <div id="placesList" class="row">
                    <!-- Famous places for the selected state will be dynamically added here -->
                </div>
            </div>
        </section>
    </main>

    <footer class="bg-dark text-white py-3 mt-5">
        <div class="container">
            <p class="text-center">&copy; 2024 Explore India</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        var baseUrl = '@Url.Content("~/")';
    </script>
    <script src="@Url.Content("~/js/destinations.js")"></script> <!-- Make sure this file has your states data -->
    <script src="@Url.Content("~/js/script.js")"></script>
    /*added variable here for the destination.js content*/
</body>
</html>
