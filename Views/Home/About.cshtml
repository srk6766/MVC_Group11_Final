    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const historicalSitesCount = 33;
            const naturalLandmarksCount = 33;
            const culturalExperiencesCount = 27;

            const data = {
                labels: ["Historical Sites", "Natural Landmarks", "Cultural Experiences/Adventure Activities"],
                datasets: [
                    {
                        label: "Tourism Attractions",
                        backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56'],
                        data: [historicalSitesCount, naturalLandmarksCount, culturalExperiencesCount]
                    }
                ]
            };

            const config = {
                type: 'pie',
                data: data,
                options: {
                    plugins: {
                        title: {
                            display: true,
                            text: 'Tourism Attractions in India'
                        }
                    },
                    responsive: true
                }
            };

            new Chart(
                document.getElementById('myChart'),
                config
            );
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const data = {
                labels: ["Taj Mahal, Agra", "Golden Temple, Amritsar", "Varanasi Ghats, Varanasi", "Hampi, Bellary", "Kerala Backwaters, Alappuzha",
                    "Ajanta and Ellora Caves, Aurangabad", "Darjeeling Himalayan Railway, Darjeeling", "Khajuraho Temples, Chhatarpur",
