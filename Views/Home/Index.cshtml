@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Explore India | Travel Recommendations</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="@Url.Content("~/css/styles.css")">
</head>
<body>
    <header class="bg-primary-transparent text-white py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <h1 class="mb-0">Explore India</h1>
                </div>
                <div class="col-md-8 text-right">
                    <button class="btn btn-primary mr-2" onclick="window.location.href='@Url.Action("Index", "Home")'">Home</button>
                    <button class="btn btn-light" onclick="window.location.href='@Url.Action("Destinations", "Home")'">Destinations</button>
                    <button class="btn btn-light" onclick="window.location.href='@Url.Action("Reviews", "Home")'">Reviews</button>
                    <button class="btn btn-light" onclick="window.location.href='@Url.Action("About", "Home")'">About Us</button>
                </div>
            </div>
        </div>
    </header>

    <main>
        <section id="homepage" class="container">
            <div>
                <h2 class="display-4 text-center mb-4">Welcome to Explore India!</h2>
                <p class="lead text-center">Your ultimate guide to discovering India’s stunning landscapes, rich culture, and vibrant heritage.</p>
                <!-- Add the video section -->
                <div class="video-section text-center">
                    <video controls width="800" height="480">
                        <source src="video/ExploreIndia.mp4" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
                
                <div class="container" style="background-color: lightblue; padding: 20px;">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <!-- Basic Overview Section -->
                            <div class="card text-center" style="background-color: white; color: black;">
                                <h3>Brief Overview</h3>
                                <p>Explore India is your go-to source for curated travel recommendations across India's diverse states. We aim to showcase the unique beauty and cultural richness of each region, from the snow-capped Himalayas to the serene waters of the South.</p>
                            </div>
                            <!-- Mission Statement Section -->
                            <div class="card text-center" style="background-color: white; color: black; margin-top: 20px;">
                                <h3>Mission Statement</h3>
                                <p>"At Explore India, we strive to bring you closer to the heart of India with comprehensive travel guides, from the snow-capped Himalayas to the serene waters of the South."</p>
                            </div>
                            <!-- Why Explore India? Section -->
                            <div class="card text-center" style="background-color: white; color: black; margin-top: 20px;">
                                <h3>Why Explore India?</h3>
                                <ul>
                                    <li><strong>Cultural Richness:</strong> Discover India's diverse cultural heritage, including festivals, local cuisine, and traditional arts.</li>
                                    <li><strong>Natural Beauty:</strong> Experience the varied landscapes, from beaches and deserts to jungles and mountains.</li>
                                    <li><strong>Historical Significance:</strong> Explore the abundance of historical sites, from ancient temples to colonial architecture, each telling a part of India’s storied past.</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="bg-dark text-white py-3 mt-5">
        <div class="container">
            <p class="text-center">&copy; 2024 Explore India</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/umd/popper.min.js"></script>
    <script>
        if (typeof Popper === 'undefined') {
            var script = document.createElement('script');
            script.src = '@Url.Content("~/scripts/popper.min.js")';
            document.head.appendChild(script);
        }
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
